---
import { Icon } from 'astro-icon/components';

interface Props {
	id?: string;
	value: string;
	text: string;
	icon: string;
	color: string;
	addClassValue?: string;
}

const { id ,value = '0', text = 'Titulo', icon = 'chart-bar' , color = 'bg-gradient-to-r from-custom-secundary to-custom-tertiary', addClassValue} = Astro.props;

---
<div id={id} class=`bg-white p-4 rounded-xl shadow-md ${color}`>
    <!-- Contenido de la card 1 -->
    <Icon name={icon} class="text-4xl text-white" />
    <h3 id={id} class=`text-2xl text-white font-semibold mb-2 truncate ${addClassValue}`>{value}</h3>
    <p class="text-white truncate">{text}</p>
</div>