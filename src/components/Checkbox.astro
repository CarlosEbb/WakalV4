---
import { Icon } from 'astro-icon/components'

interface Props {
	id: string;
	name: string;
	icon: string;
	text: string;
    value: boolean;
}


const { id, name, icon, text} = Astro.props;

---

<style>
    [data-icon="logo"] {
        font-size: 2rem;
        color: var(--brand-color);
    }
</style>

<div class="relative flex items-center">
    <input
      name={name}
      type="checkbox"
      id={id}
      class="appearance-none w-6 h-6 rounded-full border-2 border-gray-400 checked:bg-custom-primary checked:border-transparent focus:outline-none transition-all duration-300 mr-2"
    />
    <label for={id} class="text-left text-white absolute justify-center items-center cursor-pointer">
      {icon && (
        <Icon
          name={icon}
          class="ml-1"
          style="width: 1rem; height: 1rem;"
        />
      )}
      
    </label>
    <label for={id} class="text-sm cursor-pointer select-none">
        {text}
    </label>
</div>
  