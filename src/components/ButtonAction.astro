---
import { Icon } from "astro-icon/components";

interface Props {
	icon?: string;
	text: string;
    redirect?: string; 
    addClass?: string; 
    addwith?: 'w-full' | 'w-auto' | ''; 
}

const { icon = '', text = 'button', redirect = '', addClass = '', addwith = 'w-auto'} = Astro.props;

---
{redirect !== '' ? 
    <a href={redirect} class=`${addwith} text-center px-5 bg-gradient-to-r from-custom-secundary to-custom-tertiary text-white rounded-full py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 capitalize flex items-center justify-center ${addClass}`>
        {icon != '' && <Icon name={icon} class="w-5 h-5 mr-2" />}
        {text}
    </a>

: 
<button class=`${addwith} text-center px-5 bg-gradient-to-r from-custom-secundary to-custom-tertiary text-white rounded-full py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 capitalize flex items-center justify-center ${addClass}`>
    {icon != '' && <Icon name={icon} class="w-5 h-5 mr-2" />}
    {text}
</button>
}