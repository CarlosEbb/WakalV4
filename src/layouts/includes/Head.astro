---
import  { ViewTransitions }  from 'astro:transitions';
interface Props {
	title: string;
}
const {title} = Astro.props;
---
<head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image" href="/icon.webp" />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{title}</title>
    <link  rel="stylesheet" href="/node_modules/shepherd.js/dist/css/shepherd.css" />
    <!-- <ViewTransitions /> -->
    <style is:global>
        @media print {
            .no-imprimir {
                display: none;
            }
        }

        .shepherd-button {
            background-color: #e6e6e6; /* Cambia esto al color que prefieras */
            color: #636363; /* Cambia esto al color que prefieras */
        }

        .shepherd-enabled {
            border-radius: 10px;
        }
        .shepherd-header {
            border-radius: 10px 10px 0px 0px;
        }
        
        .shepherd-arrow, .shepherd-arrow::before {
            border-width: 10px;
            border-color: transparent;
            display: none;
        }

    </style>
</head>