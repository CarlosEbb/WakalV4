---
<Layout title="Login Soluciones Laser" bodyClass="bg-gray-100 flex justify-center items-center mt-16 md:mt-0 md:h-screen md:p-24">
	<div class="relative">
		<!-- Círculo superior izquierdo -->
		<div class="absolute -top-28 -left-0 md:-top-28 md:-left-16 w-80 h-80 bg-custom-quaternary rounded-full"></div>
		<!-- Círculo inferior derecho -->
		<div class="absolute -bottom-16 -right-0 md:-bottom-16 md:-right-10 w-48 h-48 bg-custom-primary rounded-full"></div>
	
		<!-- Card central en una rejilla -->
		<div class="grid grid-cols-12 rounded-xl shadow-lg mx-4 md:mx-16 relative bg-cover md:bg-[url('/fondoLogin.webp')]">
			
			<div class="col-span-7 w-full h-auto rounded-xl relative hidden md:block z-10">
				<h1 class="flex flex-col text-white text-4xl font-bold pt-20 pl-16">Bienvenido a</h1>
				<p class="text-white text-lg  text pl-16">Su solución digital</p>
			</div>
			
			
			<!-- Capa de degradado -->
			<div class="absolute inset-0 md:bg-gradient-to-r from-custom-secundary bg-opacity-0 rounded-xl opacity-65 z-5"></div>
			
			<!-- Sección derecha con formulario -->
			<div transition:name="card-login" class="col-span-12 md:col-span-5 right-0 bg-white md:bg-opacity-45 backdrop-filter p-8 md:px-10 md:py-16 rounded-r-xl b z-10">
				<!-- Imagen de fondo -->
				<div class="bg-cover bg-center h-full md:h-auto md:w-full rounded-l-xl">
					<!-- Contenido del formulario -->
					<div class="text-right">
						<div class="col-span-12 flex flex-col items-center">
							<LogoWakal position="right" />
						</div>
					</div>
					<!-- Formulario -->
					<form id="fr_login" class="mt-8 mb-6" method="POST">
						<h2 class="text-center text-lg mb-4 text-custom-primary font-semibold">Ingresa tu información</h2>
						<InputField isrequired={true} id="email" name="email" type="text" icon="user" placeholder="Usuario o correo electrónico" value={recuerdame_value} addClass="mb-4" />
						<InputField isrequired={true} id="password" name="password" type="password" icon="lock" placeholder="Contraseña" addClass="mb-8"/>
						
						{errors.all && <p class="text-min -mt-3 ml-4 text-custom-Quinquadrenary">{errors.all}</p>}
						
						<div class="flex flex-wrap justify-center items-center mb-4">
							<Checkbox add_class="mt-2" id="recuerdame" name="recuerdame" icon="check" text="Recuérdame" value={"1"} checked={recuerdame_checked}/>
							<a href="/auth/forgetPassword" class="ml-2 mt-2 text-sm text-custom-tertiary font-semibold">¿Olvidaste tu contraseña?</a>
						</div>
						
						<button id="fr_btn_login" class="w-full bg-gradient-to-r from-custom-secundary to-custom-tertiary text-white rounded-full py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 mt-6 uppercase">Ingresar</button>
					</form>
				</div>
			</div>
		</div>
	</div>
	
	
</Layout>
