---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

import { Image } from 'astro:assets';
import localBirdImage from '../images/logo-wakal.png';
---

<Layout title="Login Soluciones Laser">
	<main>
		<div class="p-10 grid grid-cols-12 gap-x-16 gap-y-5 content-center">
			<!-- Logo -->
			<div class="col-span-3 flex flex-wow items-center rounded-lg">
        <!-- Botón de menú para móviles -->
        <div id="menuButton" class="md:hidden">
          <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" viewBox="0 0 24 24"><path fill="none" stroke="white" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M3 6h18M3 12h18M3 18h18"/></svg>
        </div>

				<img src={localBirdImage.src} alt="Logo de la empresa" class="w-52 object-contain">
			</div>

			<!-- Buscador -->
			<div class="col-span-7 rounded-lg content-center">
				<div>
					<div class="relative rounded-md shadow-sm">
					  <div class="pointer-events-none absolute inset-y-0 left-1 flex items-center pl-3 opacity-100">
						<span class="text-gray-500 sm:text-sm">
              <svg xmlns="http://www.w3.org/2000/svg" width="1.8em" height="1.8em" viewBox="0 0 26 26"><path fill="gray" d="M10 .188A9.812 9.812 0 0 0 .187 10A9.812 9.812 0 0 0 10 19.813c2.29 0 4.393-.811 6.063-2.125l.875.875a1.845 1.845 0 0 0 .343 2.156l4.594 4.625c.713.714 1.88.714 2.594 0l.875-.875a1.84 1.84 0 0 0 0-2.594l-4.625-4.594a1.824 1.824 0 0 0-2.157-.312l-.875-.875A9.812 9.812 0 0 0 10 .188M10 2a8 8 0 1 1 0 16a8 8 0 0 1 0-16M4.937 7.469a5.446 5.446 0 0 0-.812 2.875a5.46 5.46 0 0 0 5.469 5.469a5.516 5.516 0 0 0 3.156-1a7.166 7.166 0 0 1-.75.03a7.045 7.045 0 0 1-7.063-7.062c0-.104-.005-.208 0-.312"/></svg>
            </span>
					  </div>
					  <input type="text" name="search_document" id="search_document" class="0 block w-full rounded-full border-0 py-3 pl-14 pr-20 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset  sm:text-sm sm:leading-6" placeholder="Buscar documento">
					</div>
        </div>
			</div>

			<!-- Boton Consultar y menu lateral   col-span-3-->
			<div id="menu" class="hidden md:flex md:col-span-3 col-span-3  flex flex-col items-center rounded-lg">
        <div class="col-span-3 flex flex-col items-center w-full rounded-lg mb-5">
            <button class="w-full cursor-pointer bg-blue-500 hover:bg-blue-600 text-white rounded-lg px-4 py-2 h-20 text-2xl">
              Consultar
            </button>
        </div>
        

        <!-- Menú lateral -->
        <div  class="col-span-3 flex flex-col items-center bg-white w-full rounded-lg p-4 bg-opacity-80 md:block ">
          <ul class="w-full text-xl">
              <li class="border-b border-neutral-400"><a href="#">Inicio</a></li>
              <li class="border-b border-neutral-400"><a href="#">Reportes</a></li>
              <li class="border-b border-neutral-400"><a href="#">Historial de actividades</a></li>
              <li class="border-b border-neutral-400"><a href="#">Usuarios</a></li>
              <li class="border-b border-neutral-400"><a href="#">Consultar</a></li>
          </ul>
        </div>
			</div>
			
			
			<!-- Tarjeta -->
			<div id="card-content" class="col-span-9 md:col-span-9 bg-white rounded-lg p-4 bg-opacity-80">
				
			</div>


		</div>		  
	</main>
</Layout>

<script client:only>
  document.getElementById('menuButton').addEventListener('click', function() {
    var menu = document.getElementById('menu');
    var content = document.getElementById('card-content');
    if (menu.classList.contains('hidden')) {
      menu.classList.remove('hidden');
      menu.classList.add('col-span-3');
      content.classList.remove('col-span-12');
      content.classList.add('col-span-9');
    } else {
      menu.classList.add('hidden');
      menu.classList.remove('col-span-3');
      content.classList.add('col-span-12');
      content.classList.remove('col-span-9');
    }
  });
</script>

<style>
  
	.login-container {
		background-image: url('../images/logo-wakal.png');
		background-position: top right;
		background-position: calc(100% - 8%) 0; /* Ajusta la posición de la imagen */
		background-size: 110px;		
	}
</style>