---
import Layout from "../../layouts/Layout.astro";

import { Icon } from "astro-icon/components";

import DynamicTable from "../../components/DynamicTable.astro";
import { apiController } from '../../scripts/request.js';
import { Image } from 'astro:assets';
import {convertDateTime} from "../../scripts/utils.js";
import CardContentPage from "../../components/CardContentPage.astro";
import ButtonAction from "../../components/ButtonAction.astro";


const locals:any = Astro.locals;
const responseData = await apiController(import.meta.env.PUBLIC_BASE_URL,'/usuarios','GET',null,locals.token);
const users = responseData.data;

---
<Layout title="Dashboard" bodyClass="bg-gray-100">
    
    <CardContentPage>
            <div class="flex items-center">
                <div class="w-48"></div>
                <h2 class="font-semibold text-custom-secundary text-xl text-center flex-grow">Panel de Usuarios</h2>
                
                <ButtonAction icon="plus" text="Agregar Usuario" redirect="/dashboard/usuarios/create"/>
            </div>
                
                
            <DynamicTable 
                columnas={[
                    "Nº",
                    "Nombre | Apellido | Correo",
                    "Usuario",
                    "Fecha de Registro",
                    "Cédula",
                    "Departamento",
                    "Acciones",
                ]}>
                {users.map((user, index) => (
                    
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <td class="w-4 p-4">
                        {index+1}
                        </td>
                        <th scope="row" class="flex items-center px-6 py-4 text-gray-900 whitespace-nowrap dark:text-white">
                            {user.img_profile ? (
                                <a href=`/dashboard/usuarios/show/${user.id}` data-tippy-content="Perfil">
                                    <Image src={user.img_profile} alt="Descripción de la imagen" width={45} height={45} class="rounded-full select-none"/>  
                                </a>
                            ) : (
                                <a href=`/dashboard/usuarios/show/${user.id}` data-tippy-content="Perfil" id={user.id} class="text-gray-600 font-medium rounded-lg text-sm text-center inline-flex items-center">
                                    <div class="menu-trigger h-11 w-11 ml-auto rounded-full flex items-center justify-center bg-gradient-to-tr from-custom-nonary to-custom-denary text-white select-none text-lg font-semibold">
                                        {(user.nombre.charAt(0) + user.apellido.charAt(0)).toUpperCase()}
                                    </div>
                                </a>
                            )}
                            <div class="ps-3">
                                <div class="text-base font-semibold">{user.nombre} {user.apellido}</div>
                                <div class="font-normal text-gray-500">{user.email}</div>
                            </div>  
                        </th>
                        <td class="px-6 py-4">
                            {user.nombre_rol}
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center">
                                <div class="h-2.5 w-2.5 rounded-full bg-green-500 me-2"></div> {convertDateTime(user.created_at,'DD/MM/YYYY')}
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            {user.prefijo_cedula}{user.cedula}
                        </td>
                        <td class="px-6 py-4">
                            {user.department}
                        </td>
                        <td class="px-6 py-4 justify-center items-center">
                            <div class="flex">
                                <!-- Agrega el atributo data-tippy-content con el texto del tooltip -->
                                <a href=`/dashboard/usuarios/update/${user.id}` class="text-blue-600 dark:text-blue-500 hover:underline" data-tippy-content="Editar"><Icon name="edit" size="25px" /></a>
                                <!-- Agrega el atributo data-tippy-content con el texto del tooltip -->
                                <a href=`/dashboard/usuarios/show/${user.id}` class="text-blue-600 dark:text-blue-500 hover:underline ml-1" data-tippy-content="Ver Perfil"><Icon name="eye" size="25px" /></a>
                            </div>
                        </td>


                    </tr>
                ))}
            </DynamicTable>
    </CardContentPage>
        
</Layout>
