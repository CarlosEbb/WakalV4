---
import Layout from "../../layouts/Layout.astro";

import { Icon } from "astro-icon/components";

import DynamicTable from "../../components/DynamicTable.astro";
import { apiController } from '../../scripts/request.js';
import { Image } from 'astro:assets';
import {convertDateTime} from "../../scripts/utils.js";
import CardContentPage from "../../components/CardContentPage.astro";
import ButtonAction from "../../components/ButtonAction.astro";
import ToastNotification from "../../components/ToastNotification.astro";
import InputField from "../../components/InputField.astro";

const locals:any = Astro.locals;

let errors = {all: [] };
let successMessage = {all: []};


const responseData = await apiController(import.meta.env.PUBLIC_BASE_URL,'/usuarios','GET',null,locals.token);
const users = Array.isArray(responseData.data) ? responseData.data : [];

if(responseData.data.errors || responseData.code !== 200){
    errors.all = responseData.data.errors ? responseData.data.errors : [];
}//else{
//    successMessage.all = [responseData.message];
//}

---
<Layout title="Dashboard" bodyClass="bg-gray-100">
    
    <CardContentPage>
            <div class="flex items-center">
                <div class="w-48">
                    <InputField
                        id="searchInput"
                        name="searchInput"
                        type="text"
                        icon="search"
                        placeholder="Buscar..."
                        addClass="mb-4"
                    />

                </div>
                <h2 class="font-semibold text-custom-secundary text-xl text-center flex-grow">Panel de Usuarios</h2>
                
                <ButtonAction icon="plus" text="Agregar Usuario" redirect="/dashboard/usuarios/create"/>
            </div>
                
                
            <DynamicTable 
                isValidVacio={users.length > 0}
                id="data-table"
                columnas={[
                    "Nº",
                    "Nombre | Apellido | Correo",
                    "Usuario",
                    "Tipo",
                    "Fecha de Registro",
                    "Cédula",
                    "Departamento",
                    "Acciones",
                ]}>
                {users.map((user, index) => (
                    
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <td class="w-4 p-4">
                        {index+1}
                        </td>
                        <td scope="row" class="flex items-center px-6 py-4 text-gray-900 whitespace-nowrap dark:text-white text-left">
                            <div transition:name=`imagen-perfil-${user.id}`>
                                {user.img_profile ? (
                                    <a href=`/dashboard/usuarios/show/${user.id}` data-tippy-content="Perfil">
                                        <Image src={import.meta.env.PUBLIC_BASE_URL+user.img_profile} alt="Descripción de la imagen" width={45} height={45} class="rounded-full select-none"/>  
                                    </a>
                                ) : (
                                    <a href=`/dashboard/usuarios/show/${user.id}` data-tippy-content="Perfil" id={user.id} class="text-gray-600 font-medium rounded-lg text-sm text-center inline-flex items-center">
                                        <div class="menu-trigger h-11 w-11 ml-auto rounded-full flex items-center justify-center bg-gradient-to-tr from-custom-nonary to-custom-denary text-white select-none text-lg font-semibold">
                                            {(user.nombre.charAt(0) + user.apellido.charAt(0)).toUpperCase()}
                                        </div>
                                    </a>
                                )}
                            </div>
                            <div class="ps-3">
                                <div class="text-base font-semibold">{user.nombre} {user.apellido}</div>
                                <div class="font-normal text-gray-500">{user.email}</div>
                            </div>  
                        </td>
                        <td class="px-6 py-4">
                            {user.username}
                        </td>
                        <td class="px-6 py-4">
                            {user.nombre_rol}
                        </td>
                        <td class="px-6 py-4">
                            
                            <div class="flex items-center">
                                {user.enabled == 1 &&
                                    <div class="h-2.5 w-2.5 rounded-full bg-green-500 me-2" data-tippy-content="Activo"></div>
                                }
                                {user.enabled == 0 &&
                                    <div class="h-2.5 w-2.5 rounded-full bg-red-500 me-2" data-tippy-content="Deshabilitado"></div>
                                }
                                {convertDateTime(user.created_at,'DD/MM/YYYY')}
                            </div>
                            
                        </td>
                        <td class="px-6 py-4">
                            {user.prefijo_cedula}{user.cedula}
                        </td>
                        <td class="px-6 py-4">
                            {user.department}
                        </td>
                        <td class="px-6 py-4 justify-center items-center">
                            <div class="flex">
                                <a href={'/dashboard/usuarios/update/'+user.id} class="text-blue-600 dark:text-blue-500 hover:underline" data-tippy-content="Editar"><Icon name="edit" size={25} /></a>
                                <a href={'/dashboard/usuarios/show/'+user.id} class="text-blue-600 dark:text-blue-500 hover:underline ml-1" data-tippy-content="Ver Perfil"><Icon name="eye" size={25} /></a>
                            </div>
                        </td>


                    </tr>
                ))}
            </DynamicTable>
    </CardContentPage>
    {errors.all.length > 0 && <ToastNotification slot="toast" type={'error'} textArray={errors.all}/>}
    {successMessage.all.length > 0 && <ToastNotification slot="toast" type={'success'} textArray={successMessage.all}/>}
</Layout>

<script>
    // JavaScript para filtrar la tabla
    document.getElementById('searchInput').addEventListener('keyup', function() {
        var input = this.value.toLowerCase();
        var rows = document.querySelectorAll('#data-table tbody tr');
    
        rows.forEach(function(row) {
            var cells = row.getElementsByTagName('td');
            var found = false;
    
            for (var i = 0; i < cells.length; i++) {
                if (cells[i].textContent.toLowerCase().indexOf(input) > -1) {
                    found = true;
                    break; // Si encontramos un resultado, no necesitamos seguir buscando en esta fila
                }
            }
    
            if (found) {
                row.style.display = ''; // Mostrar fila
            } else {
                row.style.display = 'none'; // Ocultar fila
            }
        });
    });
</script>